{
  "name": "@pnpm/tools.npm-manager",
  "version": "1000.0.0",
  "description": "Manages npm versions for pnpm",
  "keywords": [
    "pnpm",
    "pnpm10",
    "npm",
    "version-management"
  ],
  "license": "MIT",
  "funding": "https://opencollective.com/pnpm",
  "repository": "https://github.com/pnpm/pnpm/tree/main/tools/npm-manager",
  "homepage": "https://github.com/pnpm/pnpm/tree/main/tools/npm-manager#readme",
  "bugs": {
    "url": "https://github.com/pnpm/pnpm/issues"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib",
    "!*.map"
  ],
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "pnpm run compile",
    "test": "pnpm run compile && pnpm run _test",
    "compile": "tsc --build && pnpm run lint --fix",
    "_test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@pnpm/resolver-base": "workspace:*",
    "@pnpm/tools.installer": "workspace:*",
    "@pnpm/types": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "catalog:",
    "@pnpm/tools.npm-manager": "workspace:*"
  },
  "engines": {
    "node": ">=20.19"
  },
  "jest": {
    "preset": "@pnpm/jest-config"
  }
}
