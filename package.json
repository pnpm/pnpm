{
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm install --dir verdaccio && pnpm run prepareFixtures -C fixtures",
    "lint": "eslint --config eslint.json **/src/**/*.ts **/test/**/*.ts",
    "test-master": "pnpm compile && pnpm lint && run-p -r verdaccio test-pkgs-master",
    "test-pkgs-master": "cross-env PNPM_REGISTRY_MOCK_UPLINK=http://localhost:7348 pnpm run _test --no-sort --filter=./packages --filter=./privatePackages --workspace-concurrency=2",
    "test-branch": "pnpm compile && pnpm lint && git remote set-branches --add origin master && git fetch && run-p -r verdaccio test-pkgs-branch --workspace-concurrency=2",
    "test-pkgs-branch": "cross-env PNPM_REGISTRY_MOCK_UPLINK=http://localhost:7348 pnpm run _test --no-sort --filter=...[origin/master]",
    "verdaccio": "verdaccio --config ./verdaccio.yaml --listen 7348",
    "compile": "pnpm run --filter pnpm compile --filter @pnpm/make-dedicated-lockfile && pnpm run update-manifests",
    "watch": "pnpm run --filter @pnpm/fetch compile && pnpm run --filter pnpm compile -- --watch",
    "coveralls": "lcov-result-merger './packages/*/coverage/lcov.info' | coveralls",
    "update-manifests": "ts-node utils/updater/src/index.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.10.2",
    "@pnpm/eslint-config": "workspace:*",
    "@pnpm/registry-mock": "^2.1.0",
    "@pnpm/tsconfig": "workspace:*",
    "@types/jest": "^26.0.13",
    "@types/node": "^12.12.56",
    "@types/tape": "^4.13.0",
    "c8": "^7.3.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lcov-result-merger": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "publish-packed": "^3.0.2",
    "rimraf": "^3.0.2",
    "tape": "^4.13.3",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "verdaccio": "^4.8.1",
    "yarn": "^1.22.5",
    "yarnhook": "^0.4.3"
  },
  "engines": {
    "pnpm": ">=5 || ^0.0.0-x"
  },
  "husky": {
    "hooks": {
      "pre-push": "pnpm run lint -- --quiet",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  }
}
