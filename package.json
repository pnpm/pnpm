    "cross-env": "6.0.3",
    "npm-run-all": "4.1.5",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "typescript": "3.7.0-beta",
    "verdaccio": "4.3.4"
  },
  "engines": {
    "pnpm": ">=4"
  }
