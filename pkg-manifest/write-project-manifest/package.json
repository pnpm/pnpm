{
  "name": "@pnpm/write-project-manifest",
  "version": "5.0.0",
  "description": "Write a project manifest (called package.json in most cases)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=16.14"
  },
  "files": [
    "lib",
    "!*.map"
  ],
  "scripts": {
