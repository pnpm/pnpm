{
  "name": "@pnpm/mount-modules",
  "version": "0.1.12",
  "description": "Mounts a node_modules directory with FUSE",
  "main": "lib/index.js",
  "bin": "bin/mount-modules.js",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=12.17"
  },
  "files": [
    "lib",
    "!*.map",
    "bin"
  ],
  "scripts": {
    "lint": "eslint -c ../../eslint.json src/**/*.ts test/**/*.ts",
    "test": "pnpm run compile && pnpm run _test",
    "prepublishOnly": "pnpm run compile",
    "pre_test": "pnpm install --dir=test/__fixtures__/simple",
    "_test": "jest",
    "compile": "rimraf lib tsconfig.tsbuildinfo && tsc --build && pnpm run lint -- --fix"
  },
  "repository": "https://github.com/pnpm/pnpm/blob/master/packages/mount-modules",
  "keywords": [
    "pnpm6",
    "pnpm",
    "shrinkwrap",
    "lockfile"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pnpm/pnpm/issues"
  },
  "homepage": "https://github.com/pnpm/pnpm/blob/master/packages/mount-modules#readme",
  "peerDependencies": {
    "@pnpm/logger": "^4.0.0"
  },
  "devDependencies": {
    "@pnpm/logger": "^4.0.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@pnpm/cafs": "workspace:3.0.7",
    "@pnpm/lockfile-file": "workspace:4.1.1",
    "@pnpm/lockfile-utils": "workspace:3.0.8",
    "@pnpm/store-path": "^5.0.0",
    "@pnpm/types": "workspace:7.4.0",
    "dependency-path": "workspace:8.0.4",
    "hyperdrive-schemas": "^2.0.0",
    "load-json-file": "^6.2.0",
    "normalize-path": "^3.0.0"
  },
  "funding": "https://opencollective.com/pnpm",
  "optionalDependencies": {
    "fuse-native": "^2.2.6"
  }
}
