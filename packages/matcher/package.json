  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pnpm/pnpm/issues"
  },
  "homepage": "https://github.com/pnpm/pnpm/blob/master/packages/matcher#readme",
  "devDependencies": {
    "@pnpm/matcher": "link:"
  },
  "dependencies": {
    "escape-string-regexp": "^4.0.0"
  },
  "funding": "https://opencollective.com/pnpm"
