{
  "name": "@pnpm/matcher",
  "version": "1.0.3",
  "description": "A simple pattern matcher for pnpm",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "files": [
    "lib",
    "!*.map"
  ],
  "scripts": {
