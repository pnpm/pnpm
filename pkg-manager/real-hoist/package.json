{
  "name": "@pnpm/real-hoist",
  "version": "1001.0.20",
  "description": "Hoists dependencies in a node_modules created by pnpm",
  "keywords": [
    "pnpm",
    "pnpm11"
  ],
  "license": "MIT",
  "funding": "https://opencollective.com/pnpm",
  "repository": "https://github.com/pnpm/pnpm/tree/main/pkg-manager/real-hoist",
  "homepage": "https://github.com/pnpm/pnpm/tree/main/pkg-manager/real-hoist#readme",
  "bugs": {
    "url": "https://github.com/pnpm/pnpm/issues"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib",
    "!*.map"
  ],
  "scripts": {
    "start": "tsgo --watch",
    "_test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "test": "pnpm run compile && pnpm run _test",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "pnpm run compile",
    "compile": "tsgo --build && pnpm run lint --fix"
  },
  "dependencies": {
    "@pnpm/dependency-path": "workspace:*",
    "@pnpm/error": "workspace:*",
    "@pnpm/lockfile.utils": "workspace:*",
    "@yarnpkg/nm": "catalog:"
  },
  "devDependencies": {
    "@pnpm/lockfile.fs": "workspace:*",
    "@pnpm/real-hoist": "workspace:*",
    "@pnpm/test-fixtures": "workspace:*",
    "@pnpm/types": "workspace:*"
  },
  "engines": {
    "node": ">=22.13"
  },
  "jest": {
    "preset": "@pnpm/jest-config"
  }
}
